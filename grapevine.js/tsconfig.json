{
    "compilerOptions": {
      "target": "ES2020",                   // The target version of JavaScript to emit.
      "module": "ESNext",                   // Specify module code generation. ESNext supports both ESM and CJS outputs.
      "lib": ["ES2020", "DOM"],             // Specify the library files to include in the compilation.
      "declaration": true,                  // Generate .d.ts declaration files.
      "declarationMap": true,               // Generate source maps for declaration files.
      "sourceMap": true,                    // Generate source maps for compiled JavaScript files.
      "outDir": "./dist",                   // Redirect output structure to the dist/ directory.
      "rootDir": "./src",                   // Specify the root directory of input files.
      "strict": true,                       // Enable all strict type-checking options.
      "moduleResolution": "node",           // Use Node's module resolution strategy.
      "esModuleInterop": true,              // Emit __importStar and __importDefault helpers to support CommonJS modules.
      "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export.
      "skipLibCheck": true,                 // Skip type checking of all declaration files (improves compilation speed).
      "forceConsistentCasingInFileNames": true // Ensure file names are consistent across the project.
    },
    "include": ["src/**/*.ts"],             // Include all TypeScript files in the src/ directory.
    "exclude": ["node_modules", "dist"],    // Exclude node_modules and dist directories.
  }